<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DEDEDE" /> <!-- Background color (blue in this case) -->
            <corners android:radius="8dp" /> <!-- Corner radius for rounded corners -->
        </shape>
    </item>

    <!-- Outline shape -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color for the outline -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Outline color and width -->
            <corners android:radius="8dp" /> <!-- Corner radius to match the background -->
        </shape>
    </item>
</layer-list>